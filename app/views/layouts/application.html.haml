!!!
%html
  %head
    %title='AuthenticationAndAuthorizationDemo'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .ui.top.menu
      .ui.container
        .item
          %h5='Authentication & Authorization Demo'
        .right.menu
          - if current_user
            .item
              = current_user.email
            .item
              %li= link_to 'Log out', logout_path, method: 'delete', class: 'ui button'
          -else
            .item
              = link_to 'Login', 'login', class: 'ui button'
            .item
              = link_to 'Signup', 'signup', class: 'ui button'
    = yield
